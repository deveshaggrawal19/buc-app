<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:padding="10dp"
        android:visibility="gone"
        android:id="@+id/tx_hash_layout_display"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="@string/tx_hash"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="@string/tx_hash"
            android:id="@+id/tx_hash_tv"
            android:textSize="25sp"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/tx_action_layout"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            style="?attr/buttonBarButtonStyle"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/see_bank_details"
                android:background="#eeeeeeee"
                android:textColor="@color/colorRed"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="?attr/buttonBarButtonStyle"
                android:text="@string/see_bank_details" />
            <Button
                android:id="@+id/raise_dispute"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="?attr/buttonBarButtonStyle"
                android:text="@string/raise_dispute" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="@color/g1b67e8"
            android:padding="5dp"
            android:id="@+id/kindly"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/headings"
            android:text="Kindly wait for withdrawer confirmation"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:padding="10dp"
        android:visibility="gone"
        android:id="@+id/withdraw_completed_layout"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="@string/your_request_is_successfully_completed"
            android:textSize="@dimen/headings"
            android:textColor="@color/kyc_color"
            android:gravity="center"
            android:layout_height="wrap_content" />



    </LinearLayout>


    <LinearLayout
        android:id="@+id/bank_details_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/headings"
        android:padding="5dp"
        android:layout_marginBottom="20dp"
        android:text="@string/bank_details"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/account_no" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"
        android:text="@string/_12345678901234" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bank_name" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"
        android:text="@string/state_bank_of_india" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/beneficiary_name" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"
        android:text="@string/tomboya" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ifsc_code" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"
        android:text="@string/barb0suldel" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mode" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"
        android:text="@string/imps" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/note" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"
        android:text="@string/_1234567890_xyz" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        style="?attr/buttonBarButtonStyle"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/tx_hash_layout"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/history_item_drawable"
            android:elevation="2dp"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/transition_hash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_shape"
                android:hint="@string/enter_transection_hash"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                style="?attr/buttonBarButtonStyle">

                <Button

                    android:id="@+id/cancel_request"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#eeeeeeee"
                    android:padding="5dp"
                    android:text="@string/cancel"
                    style="?attr/buttonBarButtonStyle"
                    android:textColor="@color/colorRed" />

                <Button
                    android:id="@+id/submit_tx_hash"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="?attr/buttonBarButtonStyle"
                    android:background="@color/colorPrimary"
                    android:text="@string/submit_tx_hash"
                    android:textColor="@android:color/white" />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/withdraw_accepted_layout"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/remove_request"
                android:background="#eeeeeeee"
                android:textColor="@color/colorRed"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="?attr/buttonBarButtonStyle"
                android:text="@string/remove_request" />
            <Button
                android:id="@+id/mark_complete"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="?attr/buttonBarButtonStyle"
                android:text="@string/mark_as_complete" />

        </LinearLayout>



    </LinearLayout>




</LinearLayout>