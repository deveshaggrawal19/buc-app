<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context=".Fragments.AccountFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:id="@+id/kyc_layout"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="20dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="250dp"
            android:src="@drawable/no_kyc_submit"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_height="250dp" />

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:text="you have't submitted your kYC, \n upload your KYC document for further process"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:text="submit my kyc"
            android:id="@+id/kyc_button"
            android:background="@drawable/pills"
            android:textColor="@color/colorWhite"
            android:padding="10dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_design"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                >




                <ImageView
                    android:id="@+id/acc_pic"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/circular_img"
                    android:contentDescription="user picture"
                    android:cropToPadding="true"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/excellent" />
                <ImageView
                    android:id="@+id/tvAccountKyc"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/circular_img"
                    android:gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/ic_verified_user_black_24dp"
                    android:text=""
                    android:tint="@color/kyc_color" />


                <TextView
                    android:id="@+id/tvAccountName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Name"
                    android:layout_marginLeft="80dp"
                    android:textColor="@android:color/white"
                    android:textFontWeight="100"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/tvAccountEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginBottom="20dp"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:text="Email"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/bottom_sheet_profile_handler"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/profile_option"
                            android:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Profile"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/bottom_sheet_referral_handler"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_timeline_black_24dp"
                            android:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Refferals"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:visibility="gone"
                        android:id="@+id/bottom_sheet_chats_handler"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_menu_send"
                            android:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Tickets"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/bottom_sheet_settings_handler"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/settings_option"
                            android:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Settings"
                            android:textColor="@android:color/white" />
                    </LinearLayout>


                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvAccountMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Mobile"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/headings"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:id="@+id/account_dep_history"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:src="@drawable/coin_buy"
                            android:tint="@color/g1b67e8" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/deposit"
                            android:textColor="@color/g1b67e8" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:id="@+id/account_with_history"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:src="@drawable/coin_sell"
                            android:tint="@color/g6209c3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Withdraw"
                            android:textColor="@color/g6209c3" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:id="@+id/account_trade_history"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:src="@drawable/coin_deposite"
                            android:tint="@color/kyc_color" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Trade"
                            android:textColor="@color/kyc_color" />

                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#eeeeee"
                    android:layout_height="1dp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/account_about_us_link"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/profile_option_list_drawable"
                        android:tint="@color/g6209c3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="About Us"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/profile_menu_list_arrow_right"
                        android:tint="#cccccc" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#eeeeee"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:id="@+id/account_term_policy"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/profile_option_list_drawable"
                        android:tint="@color/g1b67e8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="Terms And Policies"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/profile_menu_list_arrow_right"
                        android:tint="#cccccc" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#eeeeee"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/profile_option_list_drawable"
                        android:tint="@color/kyc_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="More"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/profile_menu_list_arrow_right"
                        android:tint="#cccccc" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#eeeeee"
                    android:layout_height="1dp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/profile_option_list_drawable"
                        android:tint="@color/colorRed" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginLeft="40dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="Disable App Passcode"
                        android:textColor="@android:color/black" />

                    <Switch
                        android:id="@+id/disable_app_lock_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/change_passcode_layout"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_marginLeft="5dp"
                        android:tint="@color/design_default_color_secondary"
                        android:src="@drawable/profile_option_list_drawable"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_marginLeft="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:text="Change App Passcode"
                        android:textColor="@android:color/black"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/profile_menu_list_arrow_right"
                        android:tint="#cccccc" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Referral Programme"
                    android:textSize="@dimen/headings"
                    android:layout_marginLeft="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:id="@+id/share_ref_id"
                    android:background="@drawable/profile_drawable_referral_card"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Refer to your Friends"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="Share Your Referral Code"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/ref_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="MBAR007"
                        android:textColor="@android:color/white"
                        android:textSize="30dp" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="100dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/scenery_illustration"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent" />
            </LinearLayout>



        </LinearLayout>

        <ProgressBar
            android:id="@+id/pbAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />





</FrameLayout>
    </androidx.core.widget.NestedScrollView>

    </LinearLayout>