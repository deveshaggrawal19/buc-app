<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="5dp"
    android:elevation="2dp"
    android:orientation="horizontal"
    android:background="@drawable/otc_list_bg"
    android:visibility="visible">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.7"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivRate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/otc_list"
            android:padding="10dp"
            android:src="@mipmap/ic_launcher"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvRateCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold"
             />
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Trade"
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                android:textAppearance="?attr/textAppearanceListItem"

                />
            <TextView
                android:id="@+id/tvRateLastTrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:textAppearance="?attr/textAppearanceListItem"

                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical|end"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Bid"
                android:textSize="14sp"
                android:padding="5dp"
                android:textColor="@color/colorRed"
                android:textAppearance="?attr/textAppearanceListItem"

                />
            <TextView
                android:id="@+id/tvRateBid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34"
                android:textSize="14sp"
                android:padding="5dp"
                android:textColor="@color/colorRed"
                android:textAppearance="?attr/textAppearanceListItem"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical|end"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ask"
                android:textSize="14sp"
                android:padding="5dp"
                android:textColor="@color/kyc_color"
                android:textAppearance="?attr/textAppearanceListItem"
                />
            <TextView
                android:id="@+id/tvRateAsk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:textSize="14sp"
                android:padding="5dp"
                android:textColor="@color/kyc_color"
                android:textAppearance="?attr/textAppearanceListItem"
                />

        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:tint="@color/colorWhite"
        android:src="@drawable/profile_menu_list_arrow_right"
        android:layout_height="match_parent" />



















</LinearLayout>
