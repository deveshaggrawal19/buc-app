<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/history_item_drawable"
    android:elevation="1dp"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:id="@+id/historyImg"
            android:tint="@color/kyc_color"
            android:src="@drawable/history_up"
            android:layout_height="50dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Bitcoin"
            android:id="@+id/historyCoin"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/historyDate"
            android:textColor="#aaaaaa"
            android:text="01 Jan 2019"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="+ $150"
            android:id="@+id/historyAmount"
            android:textColor="@color/kyc_color"
            android:textSize="16sp"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>