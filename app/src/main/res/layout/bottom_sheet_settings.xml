<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bottom_sheet_bg_drawable"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:text="@string/bottomsheet_settings"
        android:background="@drawable/pills"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textSize="@dimen/headings"
        android:padding="10dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_marginLeft="5dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/profile_option_list_drawable"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:text="Recieve Notification"
                android:textColor="@android:color/black"
                />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#eeeeee"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_marginLeft="5dp"
                android:tint="@color/colorPrimaryDark"
                android:src="@drawable/profile_option_list_drawable"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:text="Night Mode"
                android:textColor="@android:color/black"
                />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#eeeeee"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_marginLeft="5dp"
                android:tint="@color/kyc_color"
                android:src="@drawable/profile_option_list_drawable"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:text="App Passcode"
                android:textColor="@android:color/black"
                />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_marginLeft="5dp"
                android:tint="@color/g1b67e8"
                android:src="@drawable/profile_option_list_drawable"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:text="Setup App Passocde"
                android:textColor="@android:color/black"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:tint="#cccccc"
                android:src="@drawable/profile_menu_list_arrow_right"
                android:layout_height="match_parent" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#eeeeee"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_marginLeft="5dp"
                android:tint="@color/g6209c3"
                android:src="@drawable/profile_option_list_drawable"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:text="Logout"
                android:textColor="@android:color/black"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:tint="#cccccc"
                android:src="@drawable/profile_menu_list_arrow_right"
                android:layout_height="match_parent" />

        </RelativeLayout>







    </LinearLayout>

</LinearLayout>