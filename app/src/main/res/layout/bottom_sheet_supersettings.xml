<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bottom_sheet_bg_drawable"
    android:layout_height="match_parent">





    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="30dp"
                android:tint="@color/supersettings_icon_tint"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_account_balance_wallet_black_24dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:text="Wallet"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="30dp"
                android:tint="#aaaaaa"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:text="Personal Info"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="30dp"
                android:tint="@color/supersettings_icon_tint"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_security_black_24dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:text="Security"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="30dp"
                android:tint="@color/supersettings_icon_tint"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_people_black_24dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:text="People and Sharing"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="30dp"
                android:tint="@color/supersettings_icon_tint"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_info_black_24dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:text="About BuyUCoin"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="30dp"
                android:tint="@color/supersettings_icon_tint"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_verified_user_black_24dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:text="Privacy Policy"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="30dp"
                android:tint="@color/supersettings_icon_tint"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_portrait_black_24dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:text="Logout"
                />


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>