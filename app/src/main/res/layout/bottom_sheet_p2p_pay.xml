<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_bg_drawable"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/history_item_drawable"
        android:padding="5dp"
        android:elevation="2dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minimum Boost (10-1000)" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:id="@+id/boost_value_text"
                android:layout_marginRight="10dp"
                android:text="Boost Amount 1000"/>

        </RelativeLayout>


        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:max="1000"
            android:layout_marginBottom="10dp"
            android:min="10" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <CheckBox
            android:layout_margin="5dp"
            android:id="@+id/checkBox"
            android:layout_width="70dp"
            android:gravity="center"
            android:checked="true"
            android:layout_height="35dp"
            android:textStyle="bold"
            android:button="@android:color/transparent"
            android:background="@drawable/my_coustom_checkbox"
            android:textColor="@drawable/my_coustom_checknox_text"
            android:text="IMPS" />

        <CheckBox
            android:layout_margin="5dp"
            android:id="@+id/checkBox2"
            android:layout_width="70dp"
            android:gravity="center"
            android:layout_height="35dp"
            android:textStyle="bold"
            android:button="@android:color/transparent"
            android:background="@drawable/my_coustom_checkbox"
            android:textColor="@drawable/my_coustom_checknox_text"
            android:text="UPI" />
        <EditText
            android:id="@+id/etP2PUpiId"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/input_shape"
            android:hint="UPI ID"
            android:padding="2dp" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Total Amount"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="5000"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Min Amount"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="500"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Boost Amount"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="100"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />

        </LinearLayout>




    </LinearLayout>

    <Button
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:text="Confirm"
        android:background="@drawable/pills"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content" />
</LinearLayout>
</androidx.core.widget.NestedScrollView>
