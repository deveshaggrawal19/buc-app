<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bsc_options_bg"
    tools:context=".PassCodeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="-2dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:paddingBottom="40dp">

            <LinearLayout
                android:id="@+id/confirm_passcode_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CONFIRM PASSCODE"
                    android:textColor="@color/colorWhite"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:text="Please Enter Your Passcode Again" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="30dp">

                <View
                    android:id="@+id/pinview1"
                    style="@style/PasswordDots" />

                <View
                    android:id="@+id/pinview2"
                    style="@style/PasswordDots" />

                <View
                    android:id="@+id/pinview3"
                    style="@style/PasswordDots" />

                <View
                    android:id="@+id/pinview4"
                    style="@style/PasswordDots" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout style="@style/PasswordButtonLayout">

                <TextView
                    style="@style/PasswordButton"
                    android:text="1" />

                <TextView
                    style="@style/PasswordButton"
                    android:text="2" />

                <TextView
                    style="@style/PasswordButton"
                    android:text="3" />


            </LinearLayout>

            <LinearLayout style="@style/PasswordButtonLayout">

                <TextView
                    style="@style/PasswordButton"
                    android:text="4" />

                <TextView
                    style="@style/PasswordButton"
                    android:text="5" />

                <TextView
                    style="@style/PasswordButton"
                    android:text="6" />


            </LinearLayout>

            <LinearLayout style="@style/PasswordButtonLayout">

                <TextView
                    style="@style/PasswordButton"
                    android:text="7" />

                <TextView
                    style="@style/PasswordButton"
                    android:text="8" />

                <TextView
                    style="@style/PasswordButton"
                    android:text="9" />


            </LinearLayout>

            <LinearLayout style="@style/PasswordButtonLayout">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:padding="10dp" />

                <TextView
                    style="@style/PasswordButton"
                    android:text="0" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="clearPinByOne"
                    android:padding="10dp"
                    android:src="@drawable/ic_clear_passcode"
                    android:tint="@color/colorWhite" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>