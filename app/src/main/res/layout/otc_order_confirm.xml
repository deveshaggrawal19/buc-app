<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/orderbook_card_drawable"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="Confirm Order"
            android:textColor="?attr/textColorHeading"
            android:textSize="?attr/textSizeHeading"
            android:gravity="left"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text="your order details are as follow"
            android:textColor="?attr/textColorHeading"
            android:gravity="left"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="TYPE"
                android:textSize="@dimen/subtitle_2"
                android:textColor="?attr/textColorHeading"
                android:layout_alignParentStart="true"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="Buy"
                android:id="@+id/order_type"
                android:gravity="end"
                android:textSize="@dimen/subtitle_1"
                android:textColor="?attr/textColorHeading"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="COIN"
                android:textColor="?attr/textColorHeading"
                android:layout_alignParentStart="true"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="Buy"
                android:id="@+id/order_coin"

                android:gravity="end"
                android:textSize="@dimen/subtitle_1"
                android:textColor="?attr/textColorHeading"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="AMOUNT"
                android:textColor="?attr/textColorHeading"
                android:layout_alignParentStart="true"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="Buy"
                android:id="@+id/order_amount"

                android:gravity="end"
                android:textSize="@dimen/subtitle_1"
                android:textColor="?attr/textColorHeading"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="PRICE"
                android:textColor="?attr/textColorHeading"
                android:layout_alignParentStart="true"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="Buy"
                android:gravity="end"
                android:id="@+id/order_price"
                android:textSize="@dimen/subtitle_1"
                android:textColor="?attr/textColorHeading"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="TOTAL"
                android:textColor="?attr/textColorHeading"
                android:layout_alignParentStart="true"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="Buy"
                android:gravity="end"
                android:id="@+id/order_total"
                android:textSize="@dimen/subtitle_1"
                android:textColor="?attr/textColorHeading"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent" />
        </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:gravity="end"
           android:layout_marginTop="20dp"
           android:layout_height="60dp">

           <LinearLayout
               android:id="@+id/otc_order_cancel"
               android:layout_marginEnd="20dp"
               android:layout_width="wrap_content"
               android:padding="@dimen/padding_10"
               android:gravity="center"
               android:layout_height="match_parent">
               <ImageView
                   android:layout_width="24dp"
                   android:src="@drawable/ic_close_black_24dp"
                   android:tint="@color/colorRed"
                   android:layout_height="24dp" />
               <TextView
                   android:layout_width="wrap_content"
                   android:text="Cancel"
                   android:textColor="@color/colorRed"
                   android:layout_height="wrap_content" />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/otc_order_confirm"
               android:layout_width="wrap_content"
               android:padding="@dimen/padding_10"
               android:gravity="center"
               android:layout_height="match_parent">
               <ImageView
                   android:layout_width="24dp"
                   android:src="@drawable/ic_check_black_24dp"
                   android:tint="@color/kyc_color"
                   android:layout_height="24dp" />
               <TextView
                   android:layout_width="wrap_content"
                   android:text="Confirm"
                   android:textColor="@color/kyc_color"
                   android:layout_height="wrap_content" />
           </LinearLayout>



       </LinearLayout>


    </LinearLayout>

</LinearLayout>