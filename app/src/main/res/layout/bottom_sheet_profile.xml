<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bottom_sheet_bg_drawable"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:text="@string/bottomsheet_profile"
        android:background="@drawable/pills"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textSize="@dimen/headings"
        android:padding="10dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_marginLeft="5dp"
                android:tint="@color/g6209c3"
                android:src="@drawable/profile_option_list_drawable"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="90dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="Name"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/bottomsheet_update_name_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@android:color/white"
                android:text="update"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#eeeeee"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_marginLeft="5dp"
                android:tint="@color/g6209c3"
                android:src="@drawable/profile_option_list_drawable"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginStart="40dp"
                android:layout_width="wrap_content"
                android:layout_marginEnd="90dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:text="*********"
                android:gravity="center"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                />

            <Button
                android:id="@+id/bottomsheet_update_password_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@android:color/white"
                android:text="update"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#eeeeee"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_marginLeft="5dp"
                android:tint="@color/g6209c3"
                android:src="@drawable/profile_option_list_drawable"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/profile_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="90dp"
                android:background="@android:color/white"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Mobile No"
                android:textColor="@android:color/black"
                android:textSize="15sp" />



        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#eeeeee"
            android:layout_height="1dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="12dp"
                android:tint="@color/g1b67e8"
                android:layout_marginLeft="5dp"
                android:src="@drawable/profile_option_list_drawable"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/profile_kyc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="KYC Status"
                android:textColor="@android:color/black" />


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#eeeeee"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_marginLeft="5dp"
                android:tint="@color/kyc_color"
                android:src="@drawable/profile_option_list_drawable"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Email Id"
                android:textColor="@android:color/black" />


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#eeeeee"
            android:layout_height="1dp"/>








    </LinearLayout>

</LinearLayout>