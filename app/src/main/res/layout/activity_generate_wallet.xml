<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GenerateWallet">




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="Hi"
            android:gravity="center"
            android:textSize="38sp"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/recreate"
            android:layout_gravity="center"
            android:layout_height="300dp" />

        <TextView
            android:layout_width="match_parent"
            android:text="we changed somethig to make it better , now you have to recreate your wallet again, or create your wallet if you are new"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:text="lets start"
            android:layout_marginTop="20dp"
            android:background="@drawable/pills"
            android:textColor="@color/colorWhite"
            android:padding="10dp"
            android:layout_gravity="center"
            android:id="@+id/generate_wallet"
            android:layout_height="wrap_content" />

    </LinearLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>