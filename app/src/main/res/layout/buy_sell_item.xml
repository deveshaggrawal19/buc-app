<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/otc_list_bg"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:gravity="center_vertical"
    android:elevation="2dp"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:src="@drawable/btc"
            android:background="@drawable/otc_list"
            android:padding="10dp"
            android:id="@+id/coinimg"
            android:layout_height="50dp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/coin_name"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content"
            android:text="Bitcoin" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="end|center_vertical"
            android:layout_weight="1"
            android:layout_height="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="Buy Price"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="20000"
                android:id="@+id/buy_rate_list_item"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="end|center_vertical"
            android:layout_weight="1"
            android:layout_height="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="Sell Price"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="20000"
                android:id="@+id/sell_rate_list_item"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:tint="@color/colorWhite"
            android:src="@drawable/profile_menu_list_arrow_right"
            android:layout_height="match_parent" />







</LinearLayout>
