<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.ReferralFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:background="@color/g1b67e8"
        android:text="Your Referrals"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_height="56dp" />
    <ProgressBar
        android:layout_width="match_parent"
        android:id="@+id/ref_progress"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/empty_ref"
        android:gravity="center"
        android:visibility="gone"
        android:padding="20dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="100dp"
            android:src="@drawable/ic_empty"
            android:tint="#cccccc"
            android:layout_height="100dp" />
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:text="You have no Referrals"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvReferral">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>