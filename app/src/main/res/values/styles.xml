<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/fonts</item>
        <item name="textColorHeading">@color/colorWhite</item>
        <item name="textSizeHeading">20sp</item>
        <item name="loginScreenLabel">@color/g1b67e8</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/g1b67e8</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyFullScreenDialog" parent="Base.Theme.AppCompat.DialogWhenLarge">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="fontTheme" parent="AppTheme.NoActionBar">
        <item name="android:fontFamily">@font/fonts</item>
        <item name="windowBackGroundColor">@color/windowColorWhite</item>
        <item name="EditTextColor">@color/inputColorLight</item>
        <item name="EditTextBgColor">@color/inputShapeLight</item>
        <item name="EditTextLabelColor">@color/inputLabelLight</item>
        <item name="textColorHeading">@color/textColor1</item>
        <item name="OrderBookCardBG">@color/colorWhite</item>
    </style>

    <style name="fontTheme.dark" parent="AppTheme.NoActionBar">
        <item name="windowBackGroundColor">@color/windowColorDark</item>
        <item name="EditTextColor">@color/inputColorDark</item>
        <item name="EditTextBgColor">@color/inputShapeDark</item>
        <item name="EditTextLabelColor">@color/inputLabelDark</item>
        <item name="textColorHeading">@color/textColor4</item>
        <item name="OrderBookCardBG">@color/orderBookCardColor</item>
    </style>

    <style name="WalletMore">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/wallet_shortcut_design</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BuySellRadioButton">
        <item name="android:layout_width">150dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/my_coustom_radio</item>
        <item name="android:textColor">@drawable/my_coustom_radio_text</item>
        <item name="android:layout_height">50dp</item>
    </style>



    <style name="BuySellRadioButton.dark">
        <item name="android:background">@drawable/my_coustom_radio_dark</item>
    </style>

    <style name="BuySellInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/input_shape</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="BuySellInput.NoMargin">
        <item name="android:layout_margin">0dp</item>
    </style>
    <style name="BuySellInput.LoginInput">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="BuySellInput.dark">
        <item name="android:background">@drawable/input_shape_dark</item>
    </style>

    <style name="BuySellInputInner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:background">?attr/EditTextBgColor</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">?attr/EditTextColor</item>
        <item name="android:textColorHint">?attr/EditTextLabelColor</item>
    </style>

    <style name="BuySellInputInner.NoPadding">
        <item name="android:padding">0dp</item>
    </style>

    <style name="BuySellInputInner.dark">
        <item name="android:background">?attr/EditTextColor</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
    </style>

    <style name="PasswordButton">
        <item name="android:layout_width">0dp</item>
         <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/password_btn</item>
         <item name="android:layout_margin">2dp</item>
         <item name="android:layout_weight">1</item>
         <item name="android:gravity">center</item>
         <item name="android:onClick">updatepin</item>
         <item name="android:padding">10dp</item>
         <item name="android:textColor">@color/g1b67e8</item>
        <item name="android:textStyle">bold</item>
         <item name="android:textSize">28sp</item>
    </style>

    <style name="PasswordDots">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/passcode_dots_drawable</item>
        <item name="android:layout_height">15dp</item>
    </style>

    <style name="PasswordButtonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="BuySellOptions">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/bsc_header_design</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CurrencyButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/curr_btn</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="CurrencyLabels">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CurrencyDetails">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CurrencyOrderBookTitle">
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ORDER BOOK"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
    </style>

    <style name="CurrencyOrderBookCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/orderbook_card_drawable</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CurrencyOrderBookCard.Dark">
        <item name="android:background">@drawable/orderbook_card_drawable_dark</item>
    </style>

    <style name="CurrencyOrderBookLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CurrencyOrderBookLabel.Dark">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="OtcTotalHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/textColorHeading</item>
        <item name="android:textSize">?attr/textSizeHeading</item>
    </style>

    <style name="OtcTotalHeading.LoginLabel">
        <item name="android:textColor">?attr/loginScreenLabel</item>
    </style>

    <style name="OtcCoinDetailsCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="LoginPasswordToggle">
        <item name="android:layout_width">155dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textColor">?attr/loginScreenLabel</item>
        <item name="android:layout_height">56dp</item>

    </style>


    <style name="CustomButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:background">@drawable/curr_btn</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="CustomButton.Big">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="CustomButton.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="OrderDetailsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="OrderDetailsLayoutItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/textColorHeading</item>
    </style>
    <style name="OrderDetailsLayoutItem.Right">
        <item name="android:gravity">end</item>

    </style>


</resources>
